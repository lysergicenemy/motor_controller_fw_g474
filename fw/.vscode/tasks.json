{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Make Build",
			"type": "shell",
			"command": "make -s -j 10 all",
			"options": {
				"cwd": "${workspaceRoot}",
				"shell": {
					"executable": "cmd.exe",
					"args": [
						"/C"
					]
				}
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": []
		},
		{
			"label": "Make Clean",
			"type": "shell",
			"command": "make -s clean",
			"options": {
				"cwd": "${workspaceRoot}",
				"shell": {
					"executable": "cmd.exe",
					"args": [
						"/C"
					]
				}
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": []
		},
		{
			"label": "Write to Flash MCU",
			"type": "shell",
			"command": "JLink.exe -Device STM32G474CE -If SWD -Speed 1000 jlink\\FlashMCU.jlink",
			"options": {
				"cwd": "${workspaceRoot}",
				"shell": {
					"executable": "cmd.exe",
					"args": [
						"/C"
					]
				}
			},
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"problemMatcher": []
		},
		{
			"label": "Read Flash from MCU",
			"type": "shell",
			"command": "JLink.exe -Device STM32G474CE -If SWD -Speed 1000 jlink\\ReadMCU.jlink",
			"options": {
				"cwd": "${workspaceRoot}",
				"shell": {
					"executable": "cmd.exe",
					"args": [
						"/C"
					]
				}
			},
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"problemMatcher": []
		},
		{
			"label": "Erase Flash MCU",
			"type": "shell",
			"command": "JLink.exe -Device STM32G474CE -If SWD -Speed 1000 jlink\\EraseMCU.jlink",
			"options": {
				"cwd": "${workspaceRoot}",
				"shell": {
					"executable": "cmd.exe",
					"args": [
						"/C"
					]
				}
			},
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"problemMatcher": []
		},
		{
			"label": "Reset MCU",
			"type": "shell",
			"command": "JLink.exe -Device STM32G474CE -If SWD -Speed 1000 jlink\\ResetMCU.jlink",
			"options": {
				"cwd": "${workspaceRoot}",
				"shell": {
					"executable": "cmd.exe",
					"args": [
						"/C"
					]
				}
			},
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"problemMatcher": []
		},
		{
			"label": "Start GDB Server (Cortex-M4)",
			"type": "shell",
			"command": "start JLinkGDBServer.exe -select USB -device Cortex-M4 -if SWD -speed 1000 -ir",
			"options": {
				"cwd": "${workspaceRoot}",
				"shell": {
					"executable": "cmd.exe",
					"args": [
						"/C"
					]
				}
			},
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"problemMatcher": []
		}
	]
}